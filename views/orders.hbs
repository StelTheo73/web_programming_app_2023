<div class="container-fluid order-items" id="user-orders">
    <!-- ROW -->
    <div class="row">
        <div class="col-12">
            <h3>Οι παραγγελίες μου</h3>
        </div>
    </div>
    <!-- END ROW -->

    <!-- ROW -->
    <div class="row justify-content-center">
        <!-- ORDERS HERE -->
        {{#if orders}}
            {{#each orders}}
                <div class="col-12 col-md-6 col-xl-4 flip-card mb-3">
                    <div class="order-wrapper flip-card-inner">

                        <div class="flip-card-front">
                            <div>
                                <span>{{this.shopName}}</span>
                            </div>
                            <div>
                                <span>Ημερομηνία</span>
                                <span>{{this.datetime}}</span>
                            </div>
                            <div>
                                <span>Κατάσταση</span>
                                <span>{{this.status}}</span>
                            </div>
                            <div>
                                <span>Κόστος</span>
                                <span>{{this.cost}} &euro;</span>
                            </div>
                            <div>
                                <span>Τρόπος Πληρωμής</span>
                                <span>
                                    <i class="{{this.paymentMeanIcon}}"></i>&nbsp;{{this.cardNumber}}
                                </span>
                            </div>
                            <div>
                                <span>{{this.street}}, {{this.number}}, {{this.city}}, {{this.postcode}}, {{this.country}}</span>
                            </div>
                            <div>
                                <span>{{this.floor}}, {{this.bell}}</span>
                            </div>
                            <div>
                                <span class="button-span"><button class="btn btn-outline-secondary flip-card-btn items-info-flip-btn">Προβολή Προϊόντων</button></span>
                            </div>
                            <div>
                                <span class="button-span"><button class="btn btn-outline-secondary flip-card-btn shop-info-flip-btn">Επικοινωνία με το κατάστημα</button></span>
                            </div>
                            <div class="d-flex flex-row">
                                <span class="me-3">
                                    {{#if this.stars}}
                                        {{#each this.stars}}
                                            <i class="{{this}}"></i>
                                        {{/each}}
                                    {{/if}}
                                </span>
                                <span class="button-span"><button class="btn btn-outline-secondary flip-card-btn rating-flip-btn">Αξιολόγηση</button></span>
                            </div>
                        </div>

                        <div class="flip-card-back item-info-flip-card">
                            <div>
                                <span>{{this.shopName}}</span>
                            </div>
                            {{#if this.items}}
                                {{#each this.items}}
                                    <div>
                                        <span>{{this.name}}</span>
                                        <span>{{this.quantity}}</span>
                                        <span>{{this.price}} &euro;</span>
                                    </div>
                                {{/each}}
                            {{/if}}
                            <div>
                                <span class="button-span">
                                    <button class="btn btn-outline-secondary flip-card-btn order-info-flip-btn from-item-info">Προβολή Παραγγελίας</button>
                                </span>
                            </div>
                        </div>
                        
                        <div class="flip-card-back shop-info-flip-card">
                            <div>
                                <span>{{this.shopName}}</span>
                            </div>
                            <div>
                                <span>{{this.shopAddressStreet}}, {{this.shopAddressNumber}}, {{this.shopAddressCity}}, {{this.shopAddressPostcode}}, {{this.shopAddressCountry}}</span>
                            </div>
                            <div>  
                                <span>{{this.shopPhone}}</span>
                            </div>
                            <div>
                                <span>{{this.shopEmail}}</span>
                            </div>
                            <div>
                                <span class="button-span">
                                    <button class="btn btn-outline-secondary flip-card-btn order-info-flip-btn from-shop-info">Προβολή Παραγγελίας</button>
                                </span>
                            </div>
                        </div>

                        <div class="flip-card-back rating-flip-card">
                            <div>
                                <span>Αξιολόγηση</span>
                            </div>
                            <div>
                                <form action="/orders/rate" method="POST">
                                    <div class="form-group hidden">
                                        <label for="order-id" class="form-label required"></label>
                                        <input type="text" class="form-control" id="order-id" name="order-id" value="{{this.orderId}}" required>
                                    </div>
                                    <div class="form-group">
                                        <div class="d-flex justify-content-between mb-1 px-1">
                                            <div class="w-20 text-center">1</div>
                                            <div class="w-20 text-center">2</div>
                                            <div class="w-20 text-center">3</div>
                                            <div class="w-20 text-center">4</div>
                                            <div class="w-20 text-center">5</div>
                                        </div>
                                        <input type="range" class="form-range thumb-warning" name="rating" min="1" max="5" value="{{this.rating}}">
                                    </div>
                                    <button type="submit" class="btn" style="background-color: #dd7230;">Υποβολή</button>
                                </form>
                            </div>
                            <div>
                                <span class="button-span">
                                    <button class="btn btn-outline-secondary flip-card-btn order-info-flip-btn from-rating-info">Προβολή Παραγγελίας</button>
                                </span>
                            </div>
                        </div>

                    </div>
                </div>
            {{/each}}
        {{/if}}
    </div>
    <!-- END ROW -->
</div>