<div class="container user-items" id="user-items-addresses">
    <!-- ROW -->
    <div class="row">
        <div class="col-6">
            <h1>Διαχείριση Διευθύνσεων</h1>
        </div>
    
        <div class="col-6 d-flex justify-content-end align-items-center">
            <button type="button" class="btn btn-primary bg-success add-new-btn" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
            Προσθήκη Νέας
            </button>
        </div>
        
        <!-- MODAL -->
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                ...
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Understood</button>
                </div>
            </div>
            </div>
        </div>                    
        <!-- END MODAL -->
    </div>
    <!-- END ROW -->
        
    <!-- ROW -->
    <div class="row">
        <!-- ADDRESSES HERE -->
        {{#if addresses}}
            {{#each addresses}}
                <div class="col-12 col-md-6 col-xl-4">
                    <div class="address-card-wrapper">
                    <div>
                        <label>Πόλη</label>
                        <input type="text" value="{{this.city}}" readonly>
                    </div>
                    <div>
                        <label>Οδός</label>
                        <input type="text" value="{{this.street}}" readonly>
                    </div>
                    <div>
                        <label>Αριθμός</label>
                        <input type="text" value="{{this.number}}" readonly>
                    </div>   
                    <div>
                        <label>Όροφος</label>
                        <input type="text" value="{{this.floor}}" readonly>
                    </div>
                    <div>
                        <label>Κουδούνι</label>
                        <input type="text" value="{{this.bell}}" readonly>
                    </div>
                    <div>
                        <label>Τ. Κ.</label>
                        <input type="text" value="{{this.postcode}}" readonly>
                    </div>
                    <div>
                        <label>Χώρα</label>
                        <input type="text" value="{{this.country}}" readonly>
                    </div>
                    <div>
                        <label>Σημειώσεις</label>
                        <textarea rows="5" cols="22" readonly>{{this.notes}}</textarea>
                    </div>
                    <div>
                        <span><i class="far fa-edit text-primary"></i></span>
                        <span><i class="fas fa-trash-alt text-danger"></i></span>
                    </div>
                    </div>
                </div>
            {{/each}}
        {{/if}}
    </div>
    <!-- END ROW -->
</div>